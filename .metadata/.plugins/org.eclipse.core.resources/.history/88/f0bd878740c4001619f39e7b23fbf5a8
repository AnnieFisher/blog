var app = angular.module('ngBlog');


app.factory('postService', function($http, $location) {


	var postService = {};

	
	postService.getPosts = function() {
		
		return $http({
			method : 'GET',
			url: 'api/post/'
		})
		
	};
	
	
	postService.createPost = function(post) {
		return $http({
			method : 'POST',
			url : 'api/post/',
			headers : {
				'Content-Type' : 'application/json',
				
			},
			data : post
		})
		.then(function() {
			$location.url('/index');
		})
	}
	
	return postService;
	
});