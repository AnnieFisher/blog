var app = angular.module('ngBlog');
app.directive('blogDirective', function(postService){
	return{
		
		restrict : 'E',
		template :  
		
		`

        		<div>
	        		<ul>
					<li><h3>{{blog.postName}}</h3></li>	
					<li><h5>{{blog.postDate}}</h5></li>	
					<li><h4>{{blog.body}}</h4></li>
					<button ng-click = "deletePost(post)" >Delete Post</button>
	        		</ul>
        	
        		</div>
    
		
		`,
		
		link : function($scope,$element,$attribute){
			
			
			$scope.blog = postService.getBlog();
			
		}
	}
	
});